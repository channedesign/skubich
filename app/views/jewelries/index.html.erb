<div class="container">
<%= render("shared/logo", title: "My Jewelries") %>
	<% if logged_in? %>
		<div class="row center">
			<%= link_to("New", new_jewelry_path, class: "btn btn-info new_button") %>
		</div>
		<hr />
	<% end %>
	<div class="marginTopMinus50">
		<% @jewelries.each do |jewelry| %>
		<div class="col-sm-4 center marginBottomMin" id="<%= jewelry.name.delete(' ') %>">
			<%= link_to(image_tag(jewelry.image.url(:medium), class: "jewelry_pic_list", alt: "Bijoux"), jewelry_path(jewelry), class: "link") %>
		</div>
		<% end %>
	</div>
</div>
<div class="marginTop"></div>